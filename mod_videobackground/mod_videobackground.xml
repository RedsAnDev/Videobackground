<?xml version="1.0" encoding="UTF-8"?>
<extension
	type="module"
	version="3.4.8"
	client="site"
	method="upgrade">
	<name>mod_videobackground</name>
	<author>RAD</author>
	<email>code@redsandev.com</email>
	<creationDate>March 2016</creationDate>
	<copyright>Nothing</copyright>
	<version>3.4.8</version>
	<files>
		<filename module="mod_videobackground">mod_videobackground.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="safeMobile" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_SAFEMOBILE" description="MOD_VIDEOBACKGROUND_DESC_SAFEMOBILE">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				<field name="autoplay" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_AUTOPLAY" description="MOD_VIDEOBACKGROUND_DESC_AUTOPLAY">
					<option value="0">JYES</option>
					<option value="1">JNO</option>
				</field>
				<field name="muted" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_MUTED" description="MOD_VIDEOBACKGROUND_DESC_MUTED">
					<option value="0">JYES</option>
					<option value="1">JNO</option>
				</field>
				<field name="loop" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_LOOP" description="MOD_VIDEOBACKGROUND_DESC_LOOP">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
        <field name="show_maintitle" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_SHOWMAINTITLE" description="MOD_VIDEOBACKGROUND_DESC_SHOWMAINTITLE">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
        <field name="maintitle" type="text" label="MOD_VIDEOBACKGROUND_LABEL_MAINTITLE" description="MOD_VIDEOBACKGROUND_DESC_MAINTITLE" />
        <field name="show_subtitle" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_SHOWSUBTITLE" description="MOD_VIDEOBACKGROUND_DESC_SHOWSUBTITLE">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
        <field name="subtitle" type="text" label="MOD_VIDEOBACKGROUND_LABEL_SUBTITLE" description="MOD_VIDEOBACKGROUND_DESC_SUBTITLE" />
        <field name="show_description" type="radio" class="btn-group" default="0" label="MOD_VIDEOBACKGROUND_LABEL_SHOWDESCRIPTION" description="MOD_VIDEOBACKGROUND_DESC_SHOWDESCRIPTION">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
        <field name="image" type="media" directory="" />
				<field name="stream"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_VIDEOBACKGROUND_LABEL_STREAM"
					description="MOD_VIDEOBACKGROUND_DESC_STREAM"
				>
					<option value="1">Local</option>
					<option value="0">Youtube</option>
				</field>
        <field name="video" type="media" label="MOD_VIDEOBACKGROUND_LABEL_URLVIDEO" description="MOD_VIDEOBACKGROUND_DESC_URLVIDEO" directory="" />
				<field name="youtube" type="text" label="MOD_VIDEOBACKGROUND_LABEL_YOUTUBE" description="MOD_VIDEOBACKGROUND_DESC_YOUTUBE" default="K9XCKP9KN7A" />
        <field name="descritption" type="editor" filter="safehtml"/>
			</fieldset>
		</fields>
	</config>
</extension>
